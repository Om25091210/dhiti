                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView114"
                    app:layout_constraintTop_toBottomOf="@+id/textView120"
                    tools:ignore="TextContrastCheck"
                    tools:text="Bilapur,Chhattisgarh 495001" />

                <TextView
                    android:id="@+id/enable_registrations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_editext_shape"
                    android:backgroundTint="@color/deep_orange_500"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/enable_registrations"
                    android:textColor="@color/deep_orange_500"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:drawableStartCompat="@drawable/ic_registration"
                    app:layout_constraintEnd_toEndOf="@+id/textView115"
                    app:layout_constraintStart_toStartOf="@+id/textView115"
                    app:layout_constraintTop_toBottomOf="@+id/textView115" />

                <TextView
                    android:id="@+id/enable_donations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
