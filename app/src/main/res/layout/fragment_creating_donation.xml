<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    tools:context=".admin_panel.donating_other.creating_donation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/light_dark_white_back"
                app:neumorph_shadowColorLight="@color/white"
                app:neumorph_shadowElevation="7dp"
                app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                app:neumorph_shapeType="flat"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/circle_bg_back_pub_note"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/blue_grey_800" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/veryLightGrey"
                app:neumorph_shadowColorLight="@color/off_white"
                app:neumorph_shadowElevation="7dp"
                app:neumorph_shapeType="flat"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="5dp"
                    android:text="@string/donate_"
                    android:textColor="@color/blue_grey_800"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/card_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/back"
                app:neumorph_lightSource="leftTop"
                app:neumorph_shadowColorDark="@color/light_dark_white_back"
                app:neumorph_shadowColorLight="@color/white"
                app:neumorph_shadowElevation="7dp"
                app:neumorph_shapeAppearance="@style/rect_shape_appearance"
                app:neumorph_shapeType="flat"
                tools:ignore="MissingConstraints">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/enable_donations"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:drawablePadding="20dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:gravity="center"
                        android:paddingStart="40dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="40dp"
                        android:paddingBottom="10dp"

                        android:text="@string/click_to_add_photo"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:drawableStartCompat="@drawable/ic_add_pic"
                        app:layout_constraintBottom_toBottomOf="@+id/imageNote"
                        app:layout_constraintEnd_toEndOf="@+id/imageNote"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageNote" />


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imageNote"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius_bottom_left="@dimen/_20sdp"
                        app:riv_corner_radius_bottom_right="@dimen/_20sdp"
                        app:riv_corner_radius_top_left="@dimen/_20sdp"
                        app:riv_corner_radius_top_right="@dimen/_20sdp"
                        tools:ignore="ImageContrastCheck" />


                    <TextView
                        android:id="@+id/textView124"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/donating_for_needy_people"
                        android:textColor="@color/design_brown_text"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageNote" />

                    <TextView
                        android:id="@+id/by"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="@string/dhiti_foundation"
                        android:textColor="@color/design_brown_text"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView124" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </soup.neumorphism.NeumorphCardView>

            <TextView
                android:id="@+id/textView126"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/it_s_not_how_much_we_give_but_how_much_love_we_put_into_giving"
                android:textColor="@color/blue_grey_600"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_details" />

            <TextView
                android:id="@+id/category_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/category"
                android:textColor="@color/design_brown_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/card_details"
                app:layout_constraintStart_toStartOf="@+id/card_details"
                app:layout_constraintTop_toBottomOf="@+id/textView126" />

            <LinearLayout
                android:id="@+id/linearLayout17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/category_txt"
                app:layout_constraintStart_toStartOf="@+id/category_txt"
                app:layout_constraintTop_toBottomOf="@+id/category_txt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_amount_bg"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/food_"
                        android:textColor="@color/design_dark_grey_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_food_"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

                    <TextView
                        android:id="@+id/cloth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_amount_bg"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/cloths"
                        android:textColor="@color/design_dark_grey_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_cloth_"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_amount_bg"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/education"
                        android:textColor="@color/design_dark_grey_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_books"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

                    <TextView
                        android:id="@+id/Other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_amount_bg"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:padding="15dp"
                        android:text="@string/_other_"
                        android:textColor="@color/design_dark_grey_text"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/ic_other_"
                        app:layout_constraintEnd_toEndOf="@+id/editTextTextMultiLine"
                        app:layout_constraintStart_toStartOf="@+id/editTextTextMultiLine"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
                        tools:ignore="SpeakableTextPresentCheck,TextContrastCheck" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/what_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/what_are_you_donating"
                android:textColor="@color/design_brown_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/card_details"
                app:layout_constraintStart_toStartOf="@+id/linearLayout17"
                app:layout_constraintTop_toBottomOf="@+id/edit_" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/voice_text"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/what_txt"
                app:layout_constraintTop_toBottomOf="@+id/what_txt"
                app:lottie_autoPlay="true"
                app:lottie_fileName="voice_text.json"
                app:lottie_loop="true" />

            <EditText
                android:id="@+id/inputNote"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@null"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="top"
                android:hint="@string/type_your_message_here"
                android:importantForAutofill="no"
                android:includeFontPadding="false"
                android:inputType="textMultiLine"
                android:minHeight="@dimen/_100sdp"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="8dp"
                android:textColor="@color/blue_grey_800"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintEnd_toEndOf="@+id/what_txt"
                app:layout_constraintStart_toStartOf="@+id/what_txt"
                app:layout_constraintTop_toBottomOf="@+id/voice_text" />

            <TextView
                android:id="@+id/location_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/address_"
                android:textColor="@color/design_brown_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/card_details"
                app:layout_constraintStart_toStartOf="@+id/linearLayout17"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout17" />

            <EditText
                android:id="@+id/editTextTextMultiLine13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/category"
                android:ems="10"
                android:gravity="start"
                android:paddingStart="20dp"
                android:layout_marginTop="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/space"
                android:background="@drawable/profile_editext_shape"
                android:backgroundTint="@color/grey_10"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:inputType="textMultiLine"
                android:theme="@style/note_pub_editext"
                app:layout_constraintEnd_toEndOf="@+id/location_txt"
                app:layout_constraintStart_toStartOf="@+id/location_txt"
                app:layout_constraintTop_toBottomOf="@+id/location_txt" />

            <TextView
                android:id="@+id/phone_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/contact_number"
                android:textColor="@color/design_brown_text"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/card_details"
                app:layout_constraintStart_toStartOf="@+id/inputNote"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine13" />

            <EditText
                android:id="@+id/edit_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints="@string/category"
                android:background="@drawable/profile_editext_shape"
                android:backgroundTint="@color/grey_10"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="start"
                android:maxLength="10"
                android:hint="@string/space"
                android:inputType="number"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:theme="@style/note_pub_editext"
                app:layout_constraintEnd_toEndOf="@+id/location_txt"
                app:layout_constraintStart_toStartOf="@+id/location_txt"
                app:layout_constraintTop_toBottomOf="@+id/phone_txt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:drawableEnd="@drawable/ic_contribute_love"
            android:drawablePadding="15dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="@string/donate_"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>