<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_red"
    tools:context=".Locality">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="@string/location"
            android:textColor="@color/barn_red"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tap_to_select_your_location"
            android:textColor="@color/verify_gray_message" />

        <LinearLayout
            android:id="@+id/animation_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="rice.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center"
                android:text="@string/bilaspur_is_known_for_its_aromatic_rice_variety_named_doobraj_rice"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/animation_view1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_fileName="factory.json"
                app:lottie_loop="true"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/quicksand_medium"
                android:gravity="center"
                android:text="@string/korba_is_known_for_its_coal_mines_such_as_gevra_area_one_of_the_biggest_coal_mines_of_asia_kusmunda_area_and_dipka_area_all_located_in_korba_coalfield"
                android:textColor="@color/black" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/animation_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="steel.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/city_is_mainly_known_for_bhilai_steel_plant_sail_one_of_the_largest_steel_plants_in_india" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/animation_view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="temple.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/champa" />

    </LinearLayout>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/noneoftheabove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/none_of_the_above"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:gravity="center"
            app:neumorph_backgroundColor="@color/Algerian_red"
            android:textColor="@color/white"
            app:neumorph_shapeType="flat"
            style="@style/Widget.Neumorph.CardView"
            app:neumorph_shadowElevation="6dp"
            app:neumorph_shadowColorLight="@color/white"
            app:neumorph_shadowColorDark="@color/white"
            />
    </LinearLayout>
</ScrollView>